From 1f20125e79a1c016e11e87158b408b7b8023eb59 Mon Sep 17 00:00:00 2001
From: thekinhnguyen <the.nguyen.vx@renesas.com>
Date: Sun, 28 Mar 2021 10:08:14 +0700
Subject: [PATCH 150/151] arm64: dts: r9a07g044l2-smarc: enable rspi

Enables rspi module for RZ/G2L (R9A07G044L) SoC.

Signed-off-by: thekinhnguyen <the.nguyen.vx@renesas.com>
---
 arch/arm64/boot/dts/renesas/r9a07g044l2-smarc.dts | 11 +++++++++++
 1 file changed, 11 insertions(+)

diff --git a/arch/arm64/boot/dts/renesas/r9a07g044l2-smarc.dts b/arch/arm64/boot/dts/renesas/r9a07g044l2-smarc.dts
index 419c463..225e703 100644
--- a/arch/arm64/boot/dts/renesas/r9a07g044l2-smarc.dts
+++ b/arch/arm64/boot/dts/renesas/r9a07g044l2-smarc.dts
@@ -529,6 +529,11 @@
 		groups = "usb1_d";
 		function = "usb1";
 	};
+
+	spi1_pins: rspi1 {
+		groups = "rspi1_clk_b", "rspi1_data_b", "rspi1_ssl_b";
+		function = "rspi1";
+	};
 };
 
 &scif0 {
@@ -693,3 +698,9 @@
 	status = "okay";
 	timeout-sec = <60>;
 };
+
+&rspi1 {
+	pinctrl-0 = <&spi1_pins>;
+	pinctrl-names = "default";
+	status = "okay";
+};
