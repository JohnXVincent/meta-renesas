From 06b3aa8ca37048a94b2255838d5fb0252374ebac Mon Sep 17 00:00:00 2001
From: "Nguyen Van Linh [FGA.BU13]" <LinhNV25@fsoft.com.vn>
Date: Tue, 10 Apr 2018 09:24:03 +0700
Subject: [PATCH 296/642] ARM: dts: r8a77470: link vin0 and dvdec

Signed-off-by: nhannguyen <nhan.nguyen.yb@renesas.com>
Signed-off-by: Nguyen Van Linh [FGA.BU13] <LinhNV25@fsoft.com.vn>
Signed-off-by: vietn <vietn@fsoft.com.vn>
---
 arch/arm/boot/dts/r8a77470-iwg23s.dts | 33 +++++++++++++++++++++++++++++++++
 1 file changed, 33 insertions(+)

diff --git a/arch/arm/boot/dts/r8a77470-iwg23s.dts b/arch/arm/boot/dts/r8a77470-iwg23s.dts
index 24167ef..ecb5c8c 100644
--- a/arch/arm/boot/dts/r8a77470-iwg23s.dts
+++ b/arch/arm/boot/dts/r8a77470-iwg23s.dts
@@ -182,6 +182,11 @@
 		renesas,function = "du0";
 	};
 
+	vin0_pins: vin0 {
+		renesas,groups = "vin0_data8", "vin0_sync", "vin0_clkenb", "vin0_clk";
+		renesas,function = "vin0";
+	};
+
 	pwm0_pins: pwm0 {
 		renesas,groups = "pwm0_c";
 		renesas,function = "pwm0";
@@ -336,6 +341,18 @@
 			};
 		};
 	};
+
+	rcar_dvdec@0 {
+		compatible = "rcar-dvdec";
+		reg = <0x49>;
+		clocks = <&mstp8_clks R8A77470_CLK_DVDEC>;
+
+		port {
+			dvdec: endpoint {
+				remote-endpoint = <&vin0ep>;
+			};
+		};
+	};
 };
 
 &pwm0 {
@@ -389,6 +406,22 @@
 	};
 };
 
+
+&vin0 {
+	status = "okay";
+	pinctrl-0 = <&vin0_pins>;
+	pinctrl-names = "default";
+
+	port {
+		#address-cells = <1>;
+		#size-cells = <0>;
+
+		vin0ep: endpoint {
+			remote-endpoint = <&dvdec>;
+		};
+	};
+};
+
 &du {
 	pinctrl-0 = <&du0_pins>;
 	pinctrl-names = "default";
-- 
