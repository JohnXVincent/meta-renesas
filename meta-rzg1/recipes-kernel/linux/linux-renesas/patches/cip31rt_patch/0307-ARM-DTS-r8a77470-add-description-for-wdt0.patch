@@ -72,6 +72,14 @@
 		interrupts = <1 9 (GIC_CPU_MASK_SIMPLE(4) | IRQ_TYPE_LEVEL_HIGH)>;
 	};
 
+	wdt0: watchdog@e6020000 {
+		compatible = "renesas,r8a77470-wdt", "renesas,rcar-gen2-wdt";
+		reg = <0 0xe6020000 0 0x0c>;
+		clocks = <&mstp4_clks R8A77470_CLK_RWDT>;
+		timeout-sec = <60>;
