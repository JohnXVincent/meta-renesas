From 01c5dc50bdc7349969692325260cf424ca466a72 Mon Sep 17 00:00:00 2001
From: Hao Bui <hao.bui.yg@renesas.com>
Date: Wed, 22 Apr 2020 08:06:26 +0700
Subject: [PATCH 552/557] ARM: dts: iwg22d: switch to use standard properties
 of PFC node

Signed-off-by: Hao Bui <hao.bui.yg@renesas.com>
---
 arch/arm/boot/dts/r8a7745-iwg22d-sodimm.dts | 72 ++++++++++++++---------------
 arch/arm/boot/dts/r8a7745-iwg22m.dtsi       | 20 ++++----
 2 files changed, 46 insertions(+), 46 deletions(-)

diff --git a/arch/arm/boot/dts/r8a7745-iwg22d-sodimm.dts b/arch/arm/boot/dts/r8a7745-iwg22d-sodimm.dts
index c620637..5c058db 100644
--- a/arch/arm/boot/dts/r8a7745-iwg22d-sodimm.dts
+++ b/arch/arm/boot/dts/r8a7745-iwg22d-sodimm.dts
@@ -191,96 +191,96 @@
 
 &pfc {
 	can0_pins: can0 {
-		renesas,groups = "can0_data";
-		renesas,function = "can0";
+		groups = "can0_data";
+		function = "can0";
 	};
 
 	hscif1_pins: hscif1 {
-		renesas,groups = "hscif1_data", "hscif1_ctrl";
-		renesas,function = "hscif1";
+		groups = "hscif1_data", "hscif1_ctrl";
+		function = "hscif1";
 	};
 
 	scif2_pins: serial1 {
-		renesas,groups = "scif2_data";
-		renesas,function = "scif2";
+		groups = "scif2_data";
+		function = "scif2";
 	};
 
 	scif3_pins: serial2 {
-		renesas,groups = "scif3_data";
-		renesas,function = "scif3";
+		groups = "scif3_data";
+		function = "scif3";
 	};
 
 	i2c5_pins: i2c5 {
-		renesas,groups = "i2c5_b";
-		renesas,function = "i2c5";
+		groups = "i2c5_b";
+		function = "i2c5";
 	};
 
 	stmp_pins: stmpe811 {
-		renesas,groups = "intc_irq0";
-		renesas,function = "intc";
+		groups = "intc_irq0";
+		function = "intc";
 	};
 
 	backlight_pins: backlight {
-		renesas,groups = "tpu_to3_c";
-		renesas,function = "tpu";
+		groups = "tpu_to3_c";
+		function = "tpu";
 	};
 
 	du0_pins: du0 {
-		renesas,groups = "du0_rgb888", "du0_sync", "du0_disp",
+		groups = "du0_rgb888", "du0_sync", "du0_disp",
 				"du0_clk0_out";
-		renesas,function = "du0";
+		function = "du0";
 	};
 
 	vin1_pins: vin1 {
-		renesas,groups = "vin1_data8", "vin1_sync", "vin1_clk";
-		renesas,function = "vin1";
+		groups = "vin1_data8", "vin1_sync", "vin1_clk";
+		function = "vin1";
 	};
 
 	scif4_pins: scif4 {
-		renesas,groups = "scif4_data_b";
-		renesas,function = "scif4";
+		groups = "scif4_data_b";
+		function = "scif4";
 	};
 
 	avb_pins: avb {
-		renesas,groups = "avb_mdio", "avb_gmii";
-		renesas,function = "avb";
+		groups = "avb_mdio", "avb_gmii";
+		function = "avb";
 	};
 
 	phy0_pins: phy0 {
-		renesas,groups = "intc_irq8";
-		renesas,function = "intc";
+		groups = "intc_irq8";
+		function = "intc";
 	};
 
 	sdhi0_pins: sd0 {
-		renesas,groups = "sdhi0_data4", "sdhi0_ctrl";
-		renesas,function = "sdhi0";
+		groups = "sdhi0_data4", "sdhi0_ctrl";
+		function = "sdhi0";
 		power-source = <3300>;
 	};
 
 	sdhi0_pins_uhs: sd0_uhs {
-		renesas,groups = "sdhi0_data4", "sdhi0_ctrl";
-		renesas,function = "sdhi0";
+		groups = "sdhi0_data4", "sdhi0_ctrl";
+		function = "sdhi0";
 		power-source = <1800>;
 	};
 
 	sound_pins: sound {
-		renesas,groups = "ssi34_ctrl", "ssi3_data", "ssi4_data";
-		renesas,function = "ssi";
+		groups = "ssi34_ctrl", "ssi3_data", "ssi4_data";
+		function = "ssi";
 	};
 
 	usb0_pins: usb0 {
-		renesas,groups = "usb0";
-		renesas,function = "usb0";
+		groups = "usb0";
+		function = "usb0";
 	};
 
 	usb1_pins: usb1 {
-		renesas,groups = "usb1";
-		renesas,function = "usb1";
+		groups = "usb1";
+		function = "usb1";
 	};
 
 	pwm1_pins: pwm1 {
-		renesas,groups = "pwm1_c";
-		renesas,function = "pwm1";
+		groups = "pwm1_c";
+		function = "pwm1";
 	};
 };
 
diff --git a/arch/arm/boot/dts/r8a7745-iwg22m.dtsi b/arch/arm/boot/dts/r8a7745-iwg22m.dtsi
index 963f1eb..a842b6b 100644
--- a/arch/arm/boot/dts/r8a7745-iwg22m.dtsi
+++ b/arch/arm/boot/dts/r8a7745-iwg22m.dtsi
@@ -104,30 +104,30 @@
 
 &pfc {
 	mmcif0_pins: mmc {
-		renesas,groups = "mmc_data8", "mmc_ctrl";
-		renesas,function = "mmc";
+		groups = "mmc_data8", "mmc_ctrl";
+		function = "mmc";
 	};
 
 	qspi_pins: qspi {
-		renesas,groups = "qspi_ctrl", "qspi_data2";
-		renesas,function = "qspi";
+		groups = "qspi_ctrl", "qspi_data2";
+		function = "qspi";
 	};
 
 	msiof2_pins: spi3 {
-		renesas,groups = "msiof2_clk", "msiof2_tx", "msiof2_rx",
+		groups = "msiof2_clk", "msiof2_tx", "msiof2_rx",
 				"msiof2_ss2";
-		renesas,function = "msiof2";
+		function = "msiof2";
 	};
 
 	sdhi1_pins: sd1 {
-		renesas,groups = "sdhi1_data4", "sdhi1_ctrl";
-		renesas,function = "sdhi1";
+		groups = "sdhi1_data4", "sdhi1_ctrl";
+		function = "sdhi1";
 		power-source = <3300>;
 	};
 
 	i2c3_pins: i2c3 {
-		renesas,groups = "i2c3_b";
-		renesas,function = "i2c3";
+		groups = "i2c3_b";
+		function = "i2c3";
 	};
 };
 
