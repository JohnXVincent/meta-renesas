From 03748eb0e01ae6493ebd121649da0975dddca2f8 Mon Sep 17 00:00:00 2001
From: Hao Bui <hao.bui.yg@renesas.com>
Date: Thu, 23 Jul 2020 17:47:27 +0700
Subject: [PATCH 237/475] ARM: dts: iwg22d-sodimm: Add vin1 along with ov7725
 camera

Signed-off-by: Hao Bui <hao.bui.yg@renesas.com>
---
 arch/arm/boot/dts/r8a7745-iwg22d-sodimm.dts | 35 +++++++++++++++++++++++++++++
 1 file changed, 35 insertions(+)

diff --git a/arch/arm/boot/dts/r8a7745-iwg22d-sodimm.dts b/arch/arm/boot/dts/r8a7745-iwg22d-sodimm.dts
index 149b10e..c3ab7f8 100644
--- a/arch/arm/boot/dts/r8a7745-iwg22d-sodimm.dts
+++ b/arch/arm/boot/dts/r8a7745-iwg22d-sodimm.dts
@@ -199,6 +199,20 @@
 		VDDA-supply = <&reg_3p3v>;
 		VDDIO-supply = <&reg_3p3v>;
 	};
+
+	ov7725@21 {
+		compatible = "ov772x";
+		reg = <0x21>;
+		remote = <&vin1>;
+
+		port {
+			ov7725: endpoint {
+				bus-width = <8>;
+				pclk-sample = <1>;
+				remote-endpoint = <&vin1ep>;
+			};
+		};
+	};
 };
 
 &pfc {
@@ -263,6 +277,11 @@
 		groups = "usb1";
 		function = "usb1";
 	};
+
+	vin1_pins: vin1 {
+		groups = "vin1_data8", "vin1_sync", "vin1_clk";
+		function = "vin1";
+	};
 };
 
 &rcar_sound {
@@ -356,3 +375,19 @@
 &usbphy {
 	status = "okay";
 };
+
+&vin1 {
+	status = "okay";
+	pinctrl-0 = <&vin1_pins>;
+	pinctrl-names = "default";
+
+	port {
+		#address-cells = <1>;
+		#size-cells = <0>;
+
+		vin1ep: endpoint {
+			remote-endpoint = <&ov7725>;
+			bus-width = <8>;
+		};
+	};
+};
