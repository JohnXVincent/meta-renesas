 		else if (of_machine_is_compatible("renesas,r8a77470"))
 			rcar_gen2_phy_switch(channel, USBHS_UGCTRL2_USB0SEL_HSUSB_R8A77470);
@@ -430,14 +436,16 @@ static void gpio_vbus_work(struct work_struct *work)
