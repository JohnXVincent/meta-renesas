From 031646497bbe4780e04afd31414718dc28590940 Mon Sep 17 00:00:00 2001
From: Quynh Nguyen <quynhnguyen.xb@renesas.com>
Date: Mon, 20 Jul 2020 10:03:04 +0700
Subject: [PATCH 212/504] ARM: dts: iwg23s board support

Modify r8a77470-iwg23s-sbc.dts file follow to renesas CIP31

Signed-off-by: thongsyho <thong.ho.px@rvc.renesas.com>
Signed-off-by: Quynh Nguyen <quynhnguyen.xb@renesas.com>
---
 arch/arm/boot/dts/r8a77470-iwg23s-sbc.dts | 64 ++++++++++++++++++++++++++++++-
 1 file changed, 63 insertions(+), 1 deletion(-)

diff --git a/arch/arm/boot/dts/r8a77470-iwg23s-sbc.dts b/arch/arm/boot/dts/r8a77470-iwg23s-sbc.dts
index 1c6e7f8..9180939 100644
--- a/arch/arm/boot/dts/r8a77470-iwg23s-sbc.dts
+++ b/arch/arm/boot/dts/r8a77470-iwg23s-sbc.dts
@@ -15,6 +15,11 @@
 	aliases {
 		ethernet0 = &avb;
 		serial1 = &scif1;
+		serial2 = &scif2;
+		serial3 = &scif4;
+		serial4 = &scif5;
+		serial5 = &hscif1;
+		serial6 = &hscif2;
 	};
 
 	chosen {
@@ -108,6 +113,20 @@
 	clock-frequency = <20000000>;
 };
 
+&hscif1 {
+	pinctrl-0 = <&hscif1_pins>;
+	pinctrl-names = "default";
+	ctsrts;
+	status = "okay";
+};
+
+&hscif2 {
+	pinctrl-0 = <&hscif2_pins>;
+	pinctrl-names = "default";
+	ctsrts;
+	status = "okay";
+};
+
 &hsusb0 {
 	status = "okay";
 };
@@ -140,6 +159,16 @@
 		function = "can0";
 	};
 
+	hscif1_pins: serial5 {
+		groups = "hscif1_data", "hscif1_ctrl_a";
+		function = "hscif1";
+	};
+
+	hscif2_pins: serial6 {
+		groups = "hscif2_data", "hscif2_clk", "hscif2_ctrl";
+		function = "hscif2";
+	};
+
 	i2c3_pins: i2c3 {
 		groups = "i2c3_c";
 		function = "i2c3";
@@ -171,11 +200,26 @@
 		function = "qspi0";
 	};
 
-	scif1_pins: scif1 {
+	scif1_pins: serial1 {
 		groups = "scif1_data_b";
 		function = "scif1";
 	};
 
+	scif2_pins: serial2 {
+		groups = "scif2_data_b";
+		function = "scif2";
+	};
+
+	scif4_pins: serial3 {
+		groups = "scif4_data_b";
+		function = "scif4";
+	};
+
+	scif5_pins: serial4 {
+		groups = "scif5_data_b";
+		function = "scif5";
+	};
+
 	sdhi2_pins: sd2 {
 		groups = "sdhi2_data4", "sdhi2_ctrl";
 		function = "sdhi2";
@@ -250,6 +294,24 @@
 	status = "okay";
 };
 
+&scif2 {
+	pinctrl-0 = <&scif2_pins>;
+	pinctrl-names = "default";
+	status = "okay";
+};
+
+&scif4 {
+	pinctrl-0 = <&scif4_pins>;
+	pinctrl-names = "default";
+	status = "okay";
+};
+
+&scif5 {
+	pinctrl-0 = <&scif5_pins>;
+	pinctrl-names = "default";
+	status = "okay";
+};
+
 &sdhi1 {
 	pinctrl-0 = <&mmc_pins_uhs>;
 	pinctrl-names = "state_uhs";
-- 
