From 2e3ea664d155d2cb4108124dea5e9c4717803ac3 Mon Sep 17 00:00:00 2001
From: Duy Dang <duy.dang.yb@renesas.com>
Date: Tue, 21 Jul 2020 13:22:21 +0700
Subject: [PATCH 421/504] ARM: dts: iwg23s-sbc: Add DU support

Signed-off-by: Duy Dang <duy.dang.yb@renesas.com>
---
 arch/arm/boot/dts/r8a77470-iwg23s-sbc.dts | 21 +++++++++++++++++++++
 1 file changed, 21 insertions(+)

diff --git a/arch/arm/boot/dts/r8a77470-iwg23s-sbc.dts b/arch/arm/boot/dts/r8a77470-iwg23s-sbc.dts
index 68c3d8e..81f1cfa 100644
--- a/arch/arm/boot/dts/r8a77470-iwg23s-sbc.dts
+++ b/arch/arm/boot/dts/r8a77470-iwg23s-sbc.dts
@@ -116,6 +116,21 @@
 	status = "okay";
 };
 
+&du {
+	pinctrl-0 = <&du0_pins>;
+	pinctrl-names = "default";
+	status = "okay";
+
+	clocks = <&mstp7_clks R8A77470_CLK_DU0>;
+	clock-names = "du.0";
+
+	port@0 {
+		endpoint {
+			remote-endpoint = <&sii9022_in>;
+		};
+	};
+};
+
 &ehci1 {
 	status = "okay";
 };
@@ -228,6 +243,12 @@
 		function = "can0";
 	};
 
+	du0_pins: du0 {
+		groups = "du0_rgb888", "du0_clk0_out", "du0_sync",
+						"du0_cde", "du0_disp";
+		function = "du0";
+	};
+
 	hscif1_pins: serial5 {
 		groups = "hscif1_data", "hscif1_ctrl_a";
 		function = "hscif1";
-- 
