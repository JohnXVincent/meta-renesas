From a304fea49e9b1832615b71cee3621d5c18c2bfe0 Mon Sep 17 00:00:00 2001
From: Duy Dang <duy.dang.yb@renesas.com>
Date: Tue, 21 Jul 2020 11:28:46 +0700
Subject: [PATCH 415/504] ARM: dts: iwg22d: Add touchscreen support for iwg22m

Signed-off-by: Duy Dang <duy.dang.yb@renesas.com>
---
 arch/arm/boot/dts/r8a7745-iwg22d-sodimm.dts | 45 +++++++++++++++++++++++++++++
 1 file changed, 45 insertions(+)

diff --git a/arch/arm/boot/dts/r8a7745-iwg22d-sodimm.dts b/arch/arm/boot/dts/r8a7745-iwg22d-sodimm.dts
index b671aa1..d7c7b38 100644
--- a/arch/arm/boot/dts/r8a7745-iwg22d-sodimm.dts
+++ b/arch/arm/boot/dts/r8a7745-iwg22d-sodimm.dts
@@ -200,6 +200,46 @@
 		VDDIO-supply = <&reg_3p3v>;
 	};
 
+	/* STMPE811 touch screen controller */
+	stmpe811@44 {
+		compatible = "st,stmpe811";
+		#address-cells = <1>;
+		#size-cells = <0>;
+		reg = <0x44>;
+		interrupt-parent = <&irqc>;
+		interrupts = <0 IRQ_TYPE_LEVEL_LOW>;
+		pinctrl-0 = <&stmp_pins>;
+		pinctrl-names = "default";
+		id = <0>;
+		blocks = <0x5>;
+		irq-trigger = <0x1>;
+
+		stmpe_touchscreen {
+			compatible = "st,stmpe-ts";
+				reg = <0>;
+				/* 3.25 MHz ADC clock speed */
+				st,adc-freq = <3>;
+				/* 8 sample average control */
+				st,ave-ctrl = <2>;
+				/* 7 length fractional part in z */
+				st,fraction-z = <7>;
+				/*
+				* 50 mA typical 80 mA max touchscreen drivers
+				* current limit value
+				*/
+				st,i-drive = <0>;
+				/* 12-bit ADC */
+				st,mod-12b = <1>;
+				/* internal ADC reference */
+				st,ref-sel = <0>;
+				/* ADC converstion time: 80 clocks */
+				st,sample-time = <4>;
+				/* 1 ms panel driver settling time */
+				st,settling = <3>;
+				/* 5 ms touch detect interrupt delay */
+				st,touch-det-delay = <4>;
+		};
+	};
 	ov7725@21 {
 		compatible = "ov772x";
 		reg = <0x21>;
@@ -263,6 +303,11 @@
 		function = "scif4";
 	};
 
+	stmp_pins: stmpe811 {
+		groups = "intc_irq0";
+		function = "intc";
+	};
+
 	avb_pins: avb {
 		groups = "avb_mdio", "avb_gmii";
 		function = "avb";
