From 22edb74f1ecc8e48c8162055b7bb90d4d95d9f42 Mon Sep 17 00:00:00 2001
From: Hao Bui <hao.bui.yg@renesas.com>
Date: Mon, 27 Jul 2020 14:46:29 +0700
Subject: [PATCH 222/433] ARM: iwg23s-sbc: Add VIN0, I2C4, and DVDEC support

Add vin0, i2c4, and dvdec and bind dvdec to vin0.

Signed-off-by: Hao Bui <hao.bui.yg@renesas.com>
---
 arch/arm/boot/dts/r8a77470-iwg23s-sbc.dts | 40 +++++++++++++++++++++++++++++++
 1 file changed, 40 insertions(+)

diff --git a/arch/arm/boot/dts/r8a77470-iwg23s-sbc.dts b/arch/arm/boot/dts/r8a77470-iwg23s-sbc.dts
index fedf26a..09e72fa 100644
--- a/arch/arm/boot/dts/r8a77470-iwg23s-sbc.dts
+++ b/arch/arm/boot/dts/r8a77470-iwg23s-sbc.dts
@@ -129,6 +129,26 @@
 	};
 };
 
+&i2c4 {
+	pinctrl-0 = <&i2c4_pins>;
+	pinctrl-names = "default";
+
+	status = "okay";
+	clock-frequency = <100000>;
+
+	rcar_dvdec@0 {
+		compatible = "rcar-dvdec";
+		reg = <0x49>;
+		clocks = <&mstp8_clks R8A77470_CLK_DVD>;
+
+		port {
+			dvdec: endpoint {
+				remote-endpoint = <&vin0ep>;
+			};
+		};
+	};
+};
+
 &ohci1 {
 	status = "okay";
 };
@@ -197,6 +217,11 @@
 		groups = "usb1";
 		function = "usb1";
 	};
+
+	vin0_pins: vin0 {
+		groups = "vin0_data8", "vin0_sync", "vin0_clkenb", "vin0_clk";
+		function = "vin0";
+	};
 };
 
 &msiof2 {
@@ -294,3 +319,18 @@
 
 	status = "okay";
 };
+
+&vin0 {
+	status = "okay";
+	pinctrl-0 = <&vin0_pins>;
+	pinctrl-names = "default";
+
+	port {
+		#address-cells = <1>;
+		#size-cells = <0>;
+
+		vin0ep: endpoint {
+			remote-endpoint = <&dvdec>;
+		};
+	};
+};
