From: Duy Dang <duy.dang.yb@renesas.com>
Date: Tue, 21 Jul 2020 13:22:21 +0700
Subject: [PATCH 357/439] ARM: dts: iwg23s-sbc: Add DU support

Signed-off-by: Duy Dang <duy.dang.yb@renesas.com>
---
 arch/arm/boot/dts/r8a77470-iwg23s-sbc.dts | 18 ++++++++++++++++++
 1 file changed, 18 insertions(+)

diff --git a/arch/arm/boot/dts/r8a77470-iwg23s-sbc.dts b/arch/arm/boot/dts/r8a77470-iwg23s-sbc.dts
index 07ed342..7ab1bfa 100644
--- a/arch/arm/boot/dts/r8a77470-iwg23s-sbc.dts
+++ b/arch/arm/boot/dts/r8a77470-iwg23s-sbc.dts
@@ -120,6 +120,18 @@
 	status = "okay";
 };
 
+&du {
+	pinctrl-0 = <&du0_pins>;
+	pinctrl-names = "default";
+	status = "okay";
+
+	port@0 {
+		endpoint {
+			remote-endpoint = <&sii9022_in>;
+		};
+	};
+};
+
 &ehci1 {
 	status = "okay";
 };
@@ -196,6 +208,12 @@
 		function = "can0";
 	};
 
+	du0_pins: du0 {
+		groups = "du0_rgb888", "du0_clk0_out", "du0_sync",
+			 "du0_cde", "du0_disp";
+		function = "du0";
+	};
+
 	hscif1_pins: serial5 {
 		groups = "hscif1_data", "hscif1_ctrl_a";
 		function = "hscif1";
