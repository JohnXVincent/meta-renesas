From eca7a10dfa007fd7e19be622cbe6a31f9b2a1eac Mon Sep 17 00:00:00 2001
From: Duy Dang <duy.dang.yb@renesas.com>
Date: Tue, 21 Jul 2020 13:48:49 +0700
Subject: [PATCH 358/433] ARM: dts: iwg23s-sbc: Enable DU with HDMI out support
 through SiI9022A

Signed-off-by: Duy Dang <duy.dang.yb@renesas.com>
Signed-off-by: Hao Bui <hao.bui.yg@renesas.com>
---
 arch/arm/boot/dts/r8a77470-iwg23s-sbc.dts | 64 +++++++++++++++++++++++++++++++
 1 file changed, 64 insertions(+)

diff --git a/arch/arm/boot/dts/r8a77470-iwg23s-sbc.dts b/arch/arm/boot/dts/r8a77470-iwg23s-sbc.dts
index d219a0e..80cd73d 100644
--- a/arch/arm/boot/dts/r8a77470-iwg23s-sbc.dts
+++ b/arch/arm/boot/dts/r8a77470-iwg23s-sbc.dts
@@ -71,6 +71,17 @@
 		states = <3300000 1
 			  1800000 0>;
 	};
+
+	hdmi-out {
+		compatible = "hdmi-connector";
+		type = "a";
+
+		port {
+			hdmi_con: endpoint {
+				remote-endpoint = <&sii9022_out>;
+			};
+		};
+	};
 };
 
 &cpu0 {
@@ -109,6 +120,20 @@
 	status = "okay";
 };
 
+&du {
+	pinctrl-0 = <&du0_pins>;
+	pinctrl-names = "default";
+	status = "okay";
+
+	ports {
+		port@0 {
+			endpoint {
+				remote-endpoint = <&sii9022_in>;
+			};
+		};
+	};
+};
+
 &ehci1 {
 	status = "okay";
 };
@@ -185,6 +210,12 @@
 		function = "can0";
 	};
 
+	du0_pins: du0 {
+		groups = "du0_rgb888", "du0_clk0_out", "du0_sync",
+			 "du0_cde", "du0_disp";
+		function = "du0";
+	};
+
 	hscif1_pins: serial5 {
 		groups = "hscif1_data", "hscif1_ctrl_a";
 		function = "hscif1";
@@ -395,6 +426,39 @@
 	status = "okay";
 };
 
+&i2c4 {
+	pinctrl-0 = <&i2c4_pins>;
+	pinctrl-names = "default";
+	clock-frequency = <100000>;
+	status = "okay";
+
+	hdmi@39 {
+		compatible = "sil,sii9022";
+		reg = <0x39>;
+		interrupt-parent = <&gpio2>;
+		interrupts = <29 IRQ_TYPE_LEVEL_LOW>;
+
+		ports {
+			#address-cells = <1>;
+			#size-cells = <0>;
+
+			port@0 {
+				reg = <0>;
+				sii9022_in: endpoint {
+					remote-endpoint = <&du_out_rgb0>;
+				};
+			};
+
+			port@1 {
+				reg = <1>;
+				sii9022_out: endpoint {
+					remote-endpoint = <&hdmi_con>;
+				};
+			};
+	        };
+	};
+};
+
 &usb2_phy0 {
 	status = "okay";
 };
