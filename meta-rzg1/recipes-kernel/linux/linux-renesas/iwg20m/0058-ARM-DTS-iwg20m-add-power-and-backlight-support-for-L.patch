From 6fa5aa01eb29717546b806329a9e189865187bc5 Mon Sep 17 00:00:00 2001
From: Binh Nguyen <binh.nguyen.uw@rvc.renesas.com>
Date: Thu, 28 Sep 2017 05:41:03 +0700
Subject: [PATCH 2/3] ARM: DTS: iwg20m: add power and backlight support for LCD
 panel

Signed-off-by: Binh Nguyen <binh.nguyen.uw@rvc.renesas.com>
---
 arch/arm/boot/dts/r8a7743-iwg20m.dts | 18 ++++++++++++++++++
 1 file changed, 18 insertions(+)

diff --git a/arch/arm/boot/dts/r8a7743-iwg20m.dts b/arch/arm/boot/dts/r8a7743-iwg20m.dts
index c57e4f4..2afd4902 100644
--- a/arch/arm/boot/dts/r8a7743-iwg20m.dts
+++ b/arch/arm/boot/dts/r8a7743-iwg20m.dts
@@ -118,6 +118,15 @@
 		};
 	};
 
+	backlight: backlight {
+		compatible = "pwm-backlight";
+		pwms = <&pwm3 0 5000000>;
+		brightness-levels = <0 4 8 16 32 64 128 255>;
+		default-brightness-level = <7>;
+		power-supply = <&vcc_lvds>;
+		enable-gpios = <&gpio5 14 0>;
+	};
+
 	panel_edt: panel@0 {
 		compatible = "edt,etm0700g0dh6", "simple-panel";
 		power-supply = <&vcc_lvds>;
@@ -536,6 +545,15 @@
 	status = "okay";
 };
 
+&gpio7 {
+	lcd-power-eb-gpio{
+		gpio-hog;
+		gpios = <25 GPIO_ACTIVE_HIGH>;
+		output-high;
+		line-name = "lcd-power-eb-gpio";
+	};
+};
+
 &gpio2 {
 	can0-trx-en-gpio{
 		gpio-hog;
